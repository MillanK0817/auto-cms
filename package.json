{
  "name": "auto-cms-server",
  "version": "0.4.0",
  "description": "Auto turn any webpage into editable CMS without coding.",
  "keywords": [
    "cms",
    "content",
    "editor",
    "html",
    "nocode",
    "low-code",
    "server",
    "cli"
  ],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "bin": {
    "auto-cms": "./cli.js",
    "auto-cms-server": "./cli.js"
  },
  "files": [
    "public",
    "dist"
  ],
  "scripts": {
    "start": "run-p server dev",
    "server": "ts-node-dev src/server.ts",
    "test": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "build": "run-s clean tsc bundle",
    "clean": "rimraf dist",
    "tsc": "tsc -p tsconfig.build.json",
    "dev": "npm run bundle -- --watch",
    "bundle": "esbuild --bundle userscript/auto-cms.ts --outfile=public/auto-cms.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "listening-on": "^2.0.9",
    "populate-env": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.4",
    "esbuild": "^0.19.11",
    "esbuild-node-externals": "^1.9.0",
    "gen-env": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
