{
  "name": "auto-cms-server",
  "version": "0.8.0",
  "description": "Auto turn any webpage into editable CMS without coding.",
  "keywords": [
    "cms",
    "content",
    "editor",
    "html",
    "nocode",
    "low-code",
    "server",
    "cli"
  ],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/auto-cms.git"
  },
  "homepage": "https://github.com/beenotung/auto-cms#readme",
  "bugs": {
    "url": "https://github.com/beenotung/auto-cms/issues"
  },
  "bin": {
    "auto-cms": "./cli.js",
    "auto-cms-server": "./cli.js"
  },
  "files": [
    "public",
    "dist"
  ],
  "scripts": {
    "start": "run-p server dev",
    "server": "ts-node-dev src/server.ts",
    "test": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "build": "run-s clean tsc bundle",
    "clean": "rimraf dist",
    "tsc": "tsc -p tsconfig.build.json",
    "dev": "npm run bundle -- --watch",
    "bundle": "esbuild --bundle userscript/auto-cms.ts --outfile=public/auto-cms.js",
    "db:setup": "npm run db:migrate",
    "db:dev": "run-s db:migrate db:plan db:update",
    "db:migrate": "knex migrate:latest",
    "db:plan": "auto-migrate db.sqlite3 < erd.txt",
    "db:update": "run-s db:migrate db:gen-proxy",
    "db:gen-proxy": "erd-to-proxy --factory < erd.txt > src/proxy.ts"
  },
  "dependencies": {
    "@beenotung/tslib": "^23.2.0",
    "better-sqlite3": "^9.4.5",
    "better-sqlite3-proxy": "^2.6.0",
    "better-sqlite3-schema": "^3.1.4",
    "bytes": "^3.1.2",
    "cast.ts": "^1.12.3",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "formidable": "^3.5.1",
    "knex": "^3.1.0",
    "listening-on": "^2.0.9",
    "mime-detect": "^1.2.0",
    "node-easynmt": "^1.0.0",
    "populate-env": "^2.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/bytes": "^3.1.4",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/formidable": "^3.4.5",
    "@types/integer": "^4.0.1",
    "@types/node": "^20.11.4",
    "esbuild": "^0.19.11",
    "esbuild-node-externals": "^1.9.0",
    "gen-env": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "quick-erd": "^4.21.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
